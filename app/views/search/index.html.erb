<%= render 'search/form' %>
<div class="container">
    <table class= "table table-dark table-striped">
    <thead>
     <tr>
        <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th><%= sort_link(@query, :description, "Description") %></th>
        <th><%= sort_link(@query, :author, "Author") %></th>
     </tr>
    </thead>

    <tbody>
        <% Book.all.each do |book| %>
    <tr>
        <td><%= link_to book.title, book%></td>
        <td><%= book.description.to_plain_text.truncate_words(25)%></td>
        <td><%= link_to book.author, book%></td>
    </tr>
    <% end %>
    </tbody>
    </table>
</div>